{
    "version": "0.2.0",
    "compounds": [
      {
        "name": "Dev: React + Electron",
        "configurations": ["React Dev Server", "Electron App"],
        "stopAll": true,
        "preLaunchTask": "npm: install"
      }
    ],
    "configurations": [
      {
        "name": "React Dev Server",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/frontend",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "react-dev"],
        "console": "integratedTerminal",
        "skipFiles": ["<node_internals>/**"]
      },
      {
        "name": "Electron App",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}/frontend",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "electron-dev"],
        "console": "integratedTerminal",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  